<%= link_to 'New Article', new_article_path %>

<% @articles.each_with_index do |article,index| %>
<ul class="media-list">
  <li class="media">
    <div class="media-left">
      <%= link_to image_tag("http://lorempixel.com/#{50 + index}/50/cats", class: 'media-object', width: '50px'), '#' %>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= link_to article.name, article %></h4>
      <%= article.content %>
    </div>
  </li>
</ul>
<% end %>
